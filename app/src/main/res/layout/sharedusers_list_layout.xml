<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/shared_users_list_item_shape"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/sharedusers_list_linear1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/userlist_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:padding="2dp"
            android:textColor="#4d4d4d" />
        <TextView
            android:id="@+id/userlist_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="12dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sharedusers_list_linear2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="right">

    <ImageView
        android:id="@+id/userlist_remove_button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/close"/>
    </LinearLayout>

</LinearLayout>